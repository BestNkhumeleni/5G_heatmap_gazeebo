<?xml version="1.0" ?>
<!-- 
  GUI configuration for interactive RF heatmap viewing in Gazebo
  
  Usage: 
    ign gazebo -v 4 worlds/heatmap_world.sdf --gui-config guiconfig.config
  
  Features:
  - Heatmap visualization
  - Click info display
  - Detailed query results
  - Status monitoring
-->
<window>
  <width>1400</width>
  <height>900</height>
</window>

<!-- 3D Scene -->
<plugin filename="GzScene3D" name="3D View">
  <ignition-gui>
    <title>3D View</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
  </ignition-gui>
  <engine>ogre2</engine>
  <scene>scene</scene>
  <ambient_light>0.4 0.4 0.4</ambient_light>
  <background_color>0.8 0.8 0.8</background_color>
  <camera_pose>15 -15 12 0 0.5 2.35</camera_pose>
</plugin>

<!-- World Control -->
<plugin filename="WorldControl" name="World control">
  <ignition-gui>
    <title>World control</title>
    <property type="bool" key="showTitleBar">false</property>
    <property type="bool" key="resizable">false</property>
    <property type="double" key="height">72</property>
    <property type="double" key="width">121</property>
    <property type="double" key="z">1</property>
    <property type="string" key="state">floating</property>
    <anchors target="3D View">
      <line own="left" target="left"/>
      <line own="bottom" target="bottom"/>
    </anchors>
  </ignition-gui>
  <play_pause>true</play_pause>
  <step>true</step>
  <start_paused>false</start_paused>
</plugin>

<!-- World Stats -->
<plugin filename="WorldStats" name="World stats">
  <ignition-gui>
    <title>World stats</title>
    <property type="bool" key="showTitleBar">false</property>
    <property type="bool" key="resizable">false</property>
    <property type="double" key="height">110</property>
    <property type="double" key="width">290</property>
    <property type="double" key="z">1</property>
    <property type="string" key="state">floating</property>
    <anchors target="3D View">
      <line own="right" target="right"/>
      <line own="bottom" target="bottom"/>
    </anchors>
  </ignition-gui>
  <sim_time>true</sim_time>
  <real_time>true</real_time>
  <real_time_factor>true</real_time_factor>
  <iterations>true</iterations>
</plugin>

<!-- Image Display for Heatmap -->
<plugin filename="ImageDisplay" name="RF Heatmap">
  <ignition-gui>
    <title>RF Signal Strength Heatmap</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
    <property type="double" key="height">400</property>
  </ignition-gui>
  <topic>/gnb/heatmap</topic>
</plugin>

<!-- Click Info Display -->
<plugin filename="TopicViewer" name="Click Query Info">
  <ignition-gui>
    <title>Signal Query Results</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
    <property type="double" key="height">120</property>
  </ignition-gui>
  <topic_name>/gnb/heatmap/click_info</topic_name>
</plugin>

<!-- Detailed Query Results -->
<plugin filename="TopicViewer" name="Detailed Query">
  <ignition-gui>
    <title>Detailed Signal Analysis</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
    <property type="double" key="height">150</property>
  </ignition-gui>
  <topic_name>/gnb/heatmap/query_result</topic_name>
</plugin>

<!-- Status Display -->
<plugin filename="TopicViewer" name="Heatmap Status">
  <ignition-gui>
    <title>System Status</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
    <property type="double" key="height">120</property>
  </ignition-gui>
  <topic_name>/gnb/heatmap/status</topic_name>
</plugin>

<!-- Publisher Plugin for Manual Control -->
<plugin filename="Publisher" name="Manual Controls">
  <ignition-gui>
    <title>Manual Signal Query</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
    <property type="double" key="height">200</property>
  </ignition-gui>
  <message_type>ignition.msgs.Vector3d</message_type>
  <topic>/gnb/heatmap/query_position</topic>
</plugin>

<!-- Entity Tree -->
<plugin filename="EntityTree" name="Entity tree">
  <ignition-gui>
    <title>Entity tree</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
  </ignition-gui>
</plugin>

<!-- Transform Control for moving gNB -->
<plugin filename="TransformControl" name="Transform Control">
  <ignition-gui>
    <title>Transform Control (Move gNB)</title>
    <property type="bool" key="showTitleBar">true</property>
    <property type="string" key="state">docked</property>
  </ignition-gui>
</plugin>